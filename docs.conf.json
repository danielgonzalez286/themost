{
    "plugins": [
        "./node_modules/jsdoc-escape-at",
        "plugins/markdown"
    ],
    "markdown": {
        "hardwrap": true
    },
    "tags": {
        "allowUnknownTags": true
    },
    "recurseDepth": 10,
    "source": {
        "include": ["modules/@themost/web/", "modules/@themost/data/", "modules/@themost/common/"],
        "includePattern": ".+\\.js(doc)?$",
        "exclude":[ "angular.js","jquery.js", "modules/@themost/data/data-mapping-extensions.js" ]
    },
    "templates": {
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "template": "./jsdoc-theme/default",
        "destination": "./docs/",
        "readme":"README.md"
    }
}