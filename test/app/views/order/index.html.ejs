<%# { "layout":"../shared/master.html.ejs" } %>
<div class="card">
    <div class="card-header">
        <h1 class="h5 m-0">Orders | Server-Side Rendering</h1>
    </div>
    <div class="card-block">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Customer</th>
                <th>Item</th>
                <th>Price</th>
                <th>Order Date</th>
            </tr>
            </thead>
            <tbody>
            <% model.value.forEach(function(x,k) {
                %>
            <tr>
                <th scope="row"><%=(k+1)%></th>
                <td><%=x.customer.familyName%> <%=x.customer.givenName%></td>
                <td><%=x.orderedItem.name%></td>
                <td><%=model.getViewContext().html.numeral(x.orderedItem.price).format("$0,0.00")%></td>
                <td><%=model.getViewContext().html.moment(x.orderDate).format("LLL") %></td>
            </tr>
            <%
            }) %>
            </tbody>
            <tfoot>
            <tr>
                <td colspan="5">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-end">
                            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">Next</a></li>
                        </ul>
                    </nav>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>

</div>